    <%end%>
  </ul>
</div>


  <br><br><br>

  <hr><br>
  <%= form_tag batchbooknew_path do %>

      BatchBook Name :
      <select name="month">
        <option value="Jan">Jan</option>
        <option value="Aug">Aug</option>
      </select>
      <input type="text" name="year" placeholder="Year">

      <br>
      End Date : <input id="expirydate" name="expirydate" width="270" required readonly/>
      <button type="submit">Create</button>
      <script>
          $('#expirydate').datepicker({
              uiLibrary: 'bootstrap'
          });
      </script>
  <%end%>
</div>
